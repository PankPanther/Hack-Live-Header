{
	"manifest_version": 2,
	"name": "__MSG_extensionName__",
	"version": "0.1.1",
	"author": "Pankaj Aswal",
	"default_locale": "en",
	"options_ui": {
		"page": "options.html"
	},
	"icons": {
		"64": "icons/64.png"
	},
	"description": "__MSG_extensionDescription__",
	"permissions": [
		"storage",
		"activeTab",
		"webRequest",
		"webRequestBlocking",
		"tabs",
		"downloads",
		"<all_urls>"
	],
	"sidebar_action": {
		"default_icon": "icons/icon.svg",
		"default_title" : "__MSG_extensionName__",
		"default_panel": "Main.html"
	},
	"browser_action": {
		"default_title": "__MSG_extensionName__",
		"default_icon": {
			"64": "icons/64.png"
		}
	},
	"background": {
		"scripts": ["runner.js"]
	}
}
